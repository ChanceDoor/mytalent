<h2>修改账号: <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name,:label=>'名称', :autofocus => true %>
  <%= f.input :email,:label=>'邮箱', :required => true %>
  <%= f.input :password,:label=>'新密码', :autocomplete => "off", :hint => "如果不想改变密码,请留空", :required => false %>
  <%= f.input :password_confirmation,:label=>'确认密码', :required => false %>
  <%= f.input :current_password,:label=>'当前密码', :hint => "请输入您的当前密码", :required => true %>
  <%= f.button :submit, '更新', :class => 'btn-primary' %>
<% end %>
<h3>注销账户</h3>
<p><%= link_to "注销账号", registration_path(resource_name), :data => { :confirm => "注销后账号不可恢复,你确定注销该账号?" }, :method => :delete %>.</p>
<%= link_to "返回", :back %>
