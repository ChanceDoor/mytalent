<h2>登陆</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email,:label=>'邮箱', :autofocus => true %>
  <%= f.input :password,:label=>'密码' %>
  <%= f.input :remember_me,:label=>'记住我', :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "登陆", :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
