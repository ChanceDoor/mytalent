<%= form_for([@user,@goal]) do |f| %>
  <div class="field" style="width:220px">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field" style="width:220px">
    <%= f.label :description %>
    <%= f.text_area :description,:rows=>"10"%>
  </div>
  <div class="field" style="width:220px">
    <%= f.label :start_time %>
    <%= f.text_field :start_time%>
  </div>
  <div class="field" style="width:220px">
    <%= f.label :end_time %>
    <%= f.text_field :end_time%>
  </div>
  <div class="field" style="width:220px">
    <%= f.label :weight %>
    <%= f.text_field :weight%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
